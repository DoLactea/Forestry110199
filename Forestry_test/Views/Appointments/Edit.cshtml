@model Forestry_test.Models.Appointment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    <a asp-area="" asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-warning">Назад</a>
</h3>
@using (Html.BeginForm("Edit", "Appointments", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(c => c.PointID)
        <p>
            @Html.LabelFor(c => c.PointName, "Место назначения")
            <br />
            @Html.EditorFor(c => c.PointName)
        </p>
        <p>
            <input type="submit" value="Изменить" class="btn btn-sm btn-success"/>
        </p>
    </fieldset>
}

