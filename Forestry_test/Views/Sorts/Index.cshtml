@using Forestry_test.ViewModels.SortViewModel
@model SortViewModel
@addTagHelper "*, Forestry_test"
@{
    ViewData["Title"] = "Index";
}


<br />
<a class="btn btn-sm btn-success" asp-action="Create">Создать</a>
<br />
<br />
<form method="get">
    <div class="form-inline">
        <label class="control-label">Наименование: </label>
        @Html.TextBox("SortD", Model.FilterViewModel.SelectedsortD, htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="фильтр" class="btn btn-sm btn-warning" />
    </div>
    <br />
</form>
<table class="table">
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@(Model.SortedViewModel.SortIDSort)"
               asp-route-type="@(Model.FilterViewModel.SelectedsortD)">@Html.DisplayNameFor(model => model.Sort.SortID)</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@(Model.SortedViewModel.SortDSort)"
               asp-route-type="@(Model.FilterViewModel.SelectedsortD)">@Html.DisplayNameFor(model => model.Sort.SortD)</a>
        </th>
    </tr>
    @foreach (var rate in Model.Sorts)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => rate.SortID)</td>
            <td>@Html.DisplayFor(modelItem => rate.SortD)</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@rate.SortID">Изменить</a>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@rate.SortID">Подробнее</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@rate.SortID">Удалить</a>
            </td>
        </tr>

    }
</table>
<page-link page-model="Model.PageViewModel" page-action="Index"
           page-url-type="@(Model.FilterViewModel.SelectedsortD)"
           page-url-sortorder="@(Model.SortedViewModel.Current)"></page-link>




















