@model IEnumerable<Forestry_test.Models.User>
@{
    ViewBag.Title = "Users List";
}

<h2><a asp-action="Create">Список пользователей</a></h2>

<table class="table">
    <tr><th>Email</th><th>Лесничество</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.LocUser</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>